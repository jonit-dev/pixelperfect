# Public environment variables
# These are safe to commit - all NEXT_PUBLIC_ vars are exposed to browser
# Server-side secrets go in .env.prod (see .env.prod.example)

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# OAuth (public client IDs)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
NEXT_PUBLIC_FACEBOOK_CLIENT_ID=your-facebook-client-id
NEXT_PUBLIC_AZURE_CLIENT_ID=your-azure-client-id

# OAuth Provider Toggles (set to 'true' or 'false')
NEXT_PUBLIC_ENABLE_GOOGLE_OAUTH=true
NEXT_PUBLIC_ENABLE_AZURE_OAUTH=false

# Contact emails
NEXT_PUBLIC_ADMIN_EMAIL=admin@pixelperfect.com
NEXT_PUBLIC_SUPPORT_EMAIL=support@pixelperfect.app
NEXT_PUBLIC_PRIVACY_EMAIL=privacy@pixelperfect.app
NEXT_PUBLIC_LEGAL_EMAIL=legal@pixelperfect.app

# App config
NEXT_PUBLIC_APP_NAME=PixelPerfect
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Stripe Configuration
# Centralized configuration is in shared/config/stripe.ts
# See: shared/config/stripe.ts for Price IDs and product definitions

# Get publishable key from: https://dashboard.stripe.com/test/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# Baselime monitoring (client-side RUM)
# Get key from: https://console.baselime.io/settings/api-keys
NEXT_PUBLIC_BASELIME_KEY=

# Analytics
# Amplitude - Get from: https://app.amplitude.com > Settings > API Keys
NEXT_PUBLIC_AMPLITUDE_API_KEY=
# Google Analytics 4 - Get from: https://analytics.google.com > Admin > Data Streams
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Development-only server keys (not for production)
# These are only needed for local development - production keys go in .env.prod
GEMINI_API_KEY=dev-placeholder-key

# Stripe (for development - use test keys)
STRIPE_SECRET_KEY=sk_test_your_stripe_test_secret_key
STRIPE_WEBHOOK_SECRET=whsec_test_your_stripe_webhook_secret

# Server-side analytics for development
AMPLITUDE_API_KEY=test_amplitude_api_key_for_development_only
BASELIME_API_KEY=

# CORS
ALLOWED_ORIGIN=*

# Cloudflare Pages (will be set automatically in production)
CF_PAGES_URL=

# Test authentication token (for local API testing)
TEST_AUTH_TOKEN=test_auth_token_for_local_testing_only
